# {{ansible_managed}}
[Unit]
Description=Nginx NewRelic Agent
After=network.target
After=systemd-user-sessions.service
After=network-online.target
 
[Service]
User={{ nginx_nra_user }}
Type=simple
ExecStart=/usr/local/bin/nginx-nr-agent.py -c /etc/nginx-nr-agent/nginx-nr-agent.ini start
ExecStop=/usr/local/bin/nginx-nr-agent.py -c /etc/nginx-nr-agent/nginx-nr-agent.ini stop
TimeoutSec=30
Restart=on-failure
RestartSec=30
StartLimitInterval=350
StartLimitBurst=10
 
[Install]
WantedBy=multi-user.target

